<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConsumerDescAndEdit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_centerVertical="true"
        android:background="@color/colorAccent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/editTextEdScreen"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="EDIT"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nameTextEdScreen"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="NAME"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/nameEditScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/phoneNumberEdScreen"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="PHONE NO"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/phoneNumberEditScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:singleLine="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/accountNumberEdScreen"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="ACCOUNT NO"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/accountNumberEditScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:singleLine="true" />
        </LinearLayout>

        <Button
            android:id="@+id/updateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="UPDATE"
            android:textSize="18sp" />



    </LinearLayout>


</RelativeLayout>